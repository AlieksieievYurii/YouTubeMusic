<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            card_view:cardUseCompatPadding="true"
            android:focusable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:contentDescription="@string/content_description_thumbnail_video"
                    tools:src="@android:drawable/ic_delete" />

                <TextView
                    android:id="@+id/title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/download"
                    android:layout_toEndOf="@id/thumbnail"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="14sp"
                    tools:text="Just mocked title of YouTube video" />

                <TextView
                    android:id="@+id/channel_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/thumbnail"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@id/thumbnail"
                    tools:text="PornoHubChannel" />

                <ImageButton
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="@string/content_description_download_music"
                    android:src="@drawable/ic_music_download" />

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_marginEnd="25dp"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:indeterminate="false"
                    tools:progress="45"
                    android:visibility="gone"
                    android:layout_below="@id/thumbnail"
                    android:max="100"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</layout>