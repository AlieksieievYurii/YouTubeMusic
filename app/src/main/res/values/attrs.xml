<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DownloadButton">
        <attr name="backgroundColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="iconColor" format="color" />
        <attr name="state" format="enum">
            <enum name="download" value="0" />
            <enum name="downloading" value="1" />
            <enum name="downloaded" value="2" />
            <enum name="failed" value="3" />
        </attr>
        <attr name="progress" format="integer" />
    </declare-styleable>
    <declare-styleable name="EqualizerView">
        <attr name="bands" format="integer" />
        <attr name="progressDrawable" format="reference" />
        <attr name="thumb" format="reference" />
        <attr name="connectorColor" format="color" />
    </declare-styleable>
    <declare-styleable name="TwisterController">
        <attr name="enabled" format="boolean"/>
        <attr name="disableColor" format="color"/>
        <attr name="color" format="color" />
        <attr name="disableMarkerColor" format="color"/>
        <attr name="markerColor" format="color" />
    </declare-styleable>
</resources>